{
  "tasks": {
    "dev": "deno run -A --allow-env --allow-read --allow-net --node-modules-dir npm:vite dev",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "rootDirs": [
      ".",
      "./.svelte-kit",
      "./.svelte-kit/types"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-unused-ignore",
        "default-param-last",
        "eqeqeq",
        "guard-for-in",
        "no-await-in-loop",
        "no-boolean-literal-for-arguments",
        "no-const-assign",
        "no-eval",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "no-sloppy-imports"
      ]
    },
    "exclude": [
      "./.svelte-kit",
      "./dist",
      "./build",
      "./output",
      "./node_modules"
    ]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 90,
    "semiColons": true,
    "singleQuote": true,
    "exclude": [
      "./.svelte-kit",
      "./dist",
      "./build",
      "./output",
      "./node_modules"
    ]
  },
  "unstable": [
    "sloppy-imports",
    "fmt-component"
  ]
}